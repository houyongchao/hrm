<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ include file="base.jsp" %>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
  	 <link rel="stylesheet" type="text/css" href="${ basePath}/static/css/bootstrap.min.css" />
    <title>添加新的培训课程</title>
</head>
<body>
	<div class="container" style="margin-top:20px; background-color:#fff;">
		<div class="row">
			
			<div class="span12"  >
				<form class="bs-docs-example form-horizontal" style="padding-left:150px;">
					<div class="control-group">
					  <label class="control-label">课程名</label>
					  <div class="controls">
						<input type="text">
					  </div>
					</div>
					<div class="control-group">
					  <label class="control-label">课程类别</label>
					  <div class="controls">
						
						<select name="">
						  <option value="">营销类</option>
						  <option>管理类</option>
						  <option value="">生产类</option>						  
						</select>
					  </div>
					</div>					
					<div class="control-group">
						<!--这个是读取出来的吧，可以用select标签-->
					  <label class="control-label">主办部门</label>
					  <div class="controls">
						<select name="">
						  <option value="">a</option>
						  <option>b</option>
						  <option value="">c</option>						  
						</select>
					  </div>
					</div>
					<div class="control-group">
					  <label class="control-label">开始时间</label>
					  <div class="controls">
						<input id="d422" class="Wdate" type="text" onclick="WdatePicker()"/>
					  </div>
					</div>
					<div class="control-group">
					  <label class="control-label">结束时间</label>
					  <div class="controls">
						<input id="d422" class="Wdate" type="text" onclick="WdatePicker()"/>
					  </div>
					</div>
					<div class="control-group">
					  <label class="control-label">课时</label>
					  <div class="controls">
						<input type="text" >
					  </div>
					</div>					
					<div class="control-group">
					  <label class="control-label">备注</label>
					  <div class="controls">
						<textarea rows="3" ></textarea>
					  </div>
					</div>
					<div class="form-actions">
					  <button class="btn btn-primary" type="submit">保存</button>
					  <button class="btn" type="button">返回</button>
					</div>
				</form>
				
			</div>
		</div>
	</div>
</body>
</html>
